citHeader("To cite responsePatterns in publications use:")

citEntry(entry = "Manual",
  title        = "responsePatterns: Screening of careless responding patterns",
  author       = personList(as.person("Rihacek Tomas"),
                   as.person("Gottfried Jaroslav")),
  year         = "2021",
  url          = "https://github.com/trihacek/responsePatterns/",

  textVersion  =
  paste("Rihacek, T., & Gottfried, J. (2021).",
        "responsePatterns: Screening of careless responding patterns.",
        "https://github.com/trihacek/responsePatterns/")
)
